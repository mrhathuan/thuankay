@model List<Shop_Nhi.Models.CartItem>

@{
    decimal tongtien = 0;
    foreach (var item in Model)
    {
        if (item.product.promotionPrice > 0)
        {
            tongtien += item.product.promotionPrice.GetValueOrDefault(0) * item.quantity;
        }
        else
        {
            tongtien += item.product.price.GetValueOrDefault(0) * item.quantity;
        }
    }
}

 <!-- start header bottom  -->
<div class="aa-header-bottom">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-header-bottom-area">
                    <!-- logo  -->
                    <div class="aa-logo">
                        <!-- Text based logo -->
                        <a href="nhinguyenfashion.com">
                            <span class="fa fa-shopping-cart"></span>
                            <p>pn<strong>fashion</strong> <span>Đẹp hơn mỗi ngày</span></p>
                        </a>
                        <!-- img based logo -->
                        
                    </div>
                    <!-- / logo  -->
                    <!-- cart box -->
                    <div class="aa-cartbox">
                        <a class="aa-cart-link" href="/gio-hang">
                            <span class="fa fa-shopping-basket"></span>
                            <span class="aa-cart-title">GIỎ HÀNG</span>
                            <span class="aa-cart-notify">@Model.Count</span>
                        </a>
                        <div class="aa-cartbox-summary">
                            <ul>
                                    
                                @foreach (var item in Model)
                                {
                                    decimal? gia = 0;
                                        if(item.product.promotionPrice > 0)
                                        {
                                            gia = item.product.promotionPrice;
                                        }
                                        else
                                        {
                                            gia = item.product.price;
                                        }
                                    
                                    <li>
                                          <a class="aa-cartbox-img"><img src="@item.product.image" alt="@item.product.productName"></a>
                                          <div class="aa-cartbox-info">
                                            <h4><a>@item.product.productName</a></h4>
                                            <p>@item.quantity x @gia</p>
                                          </div>
                                          <a class="aa-remove-product" href="#"><span class="fa fa-times"></span></a>
                                    </li>
                                }
                                                        
                                <li>
                                    <span class="aa-cartbox-total-title">
                                        Tổng tiền
                                    </span>
                                    <span class="aa-cartbox-total-price">
                                       @tongtien<sup><u>đ</u></sup>
                                    </span>
                                </li>
                            </ul>
                            <a class="aa-cartbox-checkout aa-primary-btn" href="/gio-hang">Xem giỏ</a>
                        </div>
                    </div>
                    <!-- / cart box -->
                    <!-- search box -->
                    <div class="aa-search-box">
                        <form action="">
                            <input type="text" name="" id="" placeholder="nhập tên hoặc mã sản phẩm ">
                            <button type="submit"><span class="fa fa-search"></span></button>
                        </form>
                    </div>
                    <!-- / search box -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- / header bottom  -->