
  <!-- Login Modal -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4>Đăng nhập</h4>
                @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "aa-login-form" }))
                { 
                @*<form class="aa-login-form" action="dang-nhap" method="post">*@
                    @if (ViewBag.Error != null)
                    {
                        <div class="error">@ViewBag.Error</div>
                    }
                    <label for="username">Tài khoản<span>*</span></label>
                    <input type="text" name="username" placeholder="Nhập tài khoản">
                    <label for="password">Mật khẩu<span>*</span></label>
                    <input type="password" name="password" placeholder="Nhập mật khẩu">
                    <button class="aa-browse-btn" type="submit">Đăng nhập</button>
                    <label for="rememberme" class="rememberme"><input type="checkbox" id="rememberme"> Nhớ mật khẩu </label>
                    <p class="aa-lost-password"><a href="#">Quên mật khẩu</a></p>
                    <div class="aa-register-now">
                        Khách hàng vui lòng liên hệ quản trị.
                    </div>
                }
                @*</form>*@
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div> 